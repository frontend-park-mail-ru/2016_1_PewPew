<fest:template xmlns:fest="http://fest.mail.ru">
    <div id="main" class = "wrap">
        <div class="wrap__layout">
            <div class="logo">
                Регистрация
            </div>
            <div class = "form">
                <form name="registration">
                    <input name = "login" placeholder = "Логин" class="text_input" id="login-input"></input>
                    <input name = "password" type = "password" placeholder = "Пароль" class="text_input" id="password-input"></input>
                    <input name = "password" type = "password" placeholder = "Повторите пароль" class="text_input" id="repeat-password-input"></input>
                    <input type="submit" class="submit_input" value = "Зарегистрировать" id = 'sign-up'></input>
                </form>
            </div>
        </div>
    </div>
</fest:template>